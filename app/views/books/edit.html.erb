<h1>Edithing Book</h1>

<%= form_with model: @book do |f| %>

  <% if @book.errors.any? %>
  <%= @book.errors.count %> errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  <% end %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_field :body %>

  <br><%= f.submit 'Update Book' %></br>

  <table>
    <tr>
      <th><%= link_to 'Show', book_path(@book.id) %></th>
      <th>|</th>
      <th><%= link_to 'Back', '/books' %></th>
    </tr>
  </table>

<% end %>